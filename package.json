{
  "name": "@credit-manager/monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": "24.x",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "pnpm --filter @credit-manager/web build",
    "dev": "pnpm --filter @credit-manager/web dev",
    "start": "pnpm --filter @credit-manager/web start",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "build:all": "pnpm -r build",
    "install-deps": "pnpm install"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.17"
  }
}
