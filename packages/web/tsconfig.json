{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@credit-manager/core": ["../core/src"],
      "@credit-manager/core/*": ["../core/src/*"],
      "@credit-manager/ui": ["../ui/src"],
      "@credit-manager/ui/*": ["../ui/src/*"],
      "@credit-manager/dashboard": ["../dashboard/src"],
      "@credit-manager/dashboard/*": ["../dashboard/src/*"],
      "@credit-manager/landing": ["../landing/src"],
      "@credit-manager/landing/*": ["../landing/src/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
